citHeader("To cite smacof in publications use:")

citEntry(entry = "Article",
  title        = "Multidimensional Scaling Using Majorization: {SMACOF} in {R}",
  author       = personList(person("Jan", "de Leeuw"), as.person("Patrick Mair")),
  journal      = "Journal of Statistical Software",
  year         = "2009",
  volume       = "31",
  number       = "3",
  pages        = "1--30",
  url          = "https://www.jstatsoft.org/v31/i03/",
  textVersion  = paste("Jan de Leeuw, Patrick Mair (2009).", "Multidimensional Scaling Using Majorization: SMACOF in R.", "Journal of Statistical Software, 31(3), 1-30.", "URL https://www.jstatsoft.org/v31/i03/.")
)

citEntry(entry = "Article",
  title        = "More on multidimensional scaling in {R}: smacof version 2",
  author       = personList(as.person("Patrick Mair"), as.person("Patrick J. F. Groenen"), person("Jan", "de Leeuw")),
  journal      = "Journal of Statistical Software",
  year         = "2021",
  note         = "Forthcoming",
  textVersion  = paste("Patrick Mair, Patrick J. F. Groenen, Jan de Leeuw (2021).", "More on multidimensional scaling in {R}: smacof version 2.", "Journal of Statistical Software.", "Forthcoming")
)
